{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "moduleNameMapper": {
    "\\.(css|less|scss|sass)$": "identity-obj-proxy"
  },
  "transform": {
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  "testMatch": [
    "<rootDir>/tests/**/*.test.js",
    "<rootDir>/tests/**/*.test.jsx"
  ],
  "collectCoverageFrom": ["src/**/*.{js,jsx}", "!src/main.jsx", "!src/test/**"]
}
